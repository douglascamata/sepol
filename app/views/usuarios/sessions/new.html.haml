%div.container
  %div.row
    %div.span4.offset4.well
      %legend Entrar
      <!-- %div.alert.alert-error -->
      = semantic_form_for resource, :as => resource_name, :url => session_path(resource_name) do |f|
        = f.label :email
        = f.text_field :email, label: 'email', placeholder: 'email@exemplo.com'
        = f.label :password
        = f.password_field :password, placeholder: 'Senha', label: 'password'

        %label.checkbox
          =f.check_box :remember_me
          =f.label  :manter_conectado
        %div.actions
          = f.submit 'Entrar', class: "button btn btn-info btn-block"
          = render "devise/shared/links"