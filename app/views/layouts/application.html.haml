!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Sepol"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    %link(href="images/apple-touch-icon-144x144.png" rel="apple-touch-icon-precomposed" sizes="144x144")
    %link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon-precomposed" sizes="114x114")
    %link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon-precomposed" sizes="72x72")
    %link(href="images/apple-touch-icon.png" rel="apple-touch-icon-precomposed")
    %link(href="images/favicon.ico" rel="shortcut icon")


  %body
    =render :partial => "layouts/flash_messages", :locals => {:flash => flash}

    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %p.nav.brand
            Sepol
          .container.nav-collapse
            %ul.nav
              %li
                %a{href: root_path} 
                  %i.icon-home
                  Home
              %li
                %a{href: usuarios_path} 
                  %i.icon-group
                  Grupo de Pesquisa
              %li
                %a{href: equipamentos_path} 
                  %i.icon-beaker
                  Equipamentos
              %li
                %a{href: publicacoes_path} 
                  %i.icon-book
                  Publicações
            %ul.nav.pull-right
              - if usuario_signed_in?
                %li.dropdown
                  %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                    =current_usuario.email
                    %b.caret
                  %ul.dropdown-menu
                    %li= link_to "Editar", edit_usuario_registration_path
                    %li= link_to "Sair", destroy_usuario_session_path
              - else
                %li= link_to('Entrar', new_usuario_session_path)

    .container-fluid

      .row-fluid
        / .span2
        /   .well.sidebar-nav
        /     %ul.nav.nav-list
        /       %li.nav-header Links
        /       %li= link_to "UENF", "http://www.uenf.br/portal/index.php/br/", :target=>"_blank"
        /       %li= link_to "LAMAV", "http://www.uenf.br/Uenf/Pages/CCT/Lamav/", :target=>"_blank"
        /       %li= link_to "CNPq", "http://www.cnpq.br/", :target=>"_blank"
        / %div.container
        .span12  
          = yield
    
      %footer
        %p &copy; Company 2012
    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
